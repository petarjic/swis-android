<?xml version="1.0" encoding="utf-8"?>
<layout>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:clickable="true"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.LikesFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/dp_10">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/dp_5">

            <ImageView
                android:id="@+id/likes_profile_Pic"
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:layout_gravity="center"
                android:scaleType="fitXY"
                android:src="@drawable/intro1" />

        </androidx.cardview.widget.CardView>

        <com.swis.android.custom.customviews.textViews.GothamRoundedMed
            android:id="@+id/tv_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:paddingLeft="@dimen/dp_5"
            android:paddingRight="@dimen/dp_5"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/ts_15" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/divider_color"/>
    <com.swis.android.custom.customviews.SparkRecyclerViewLatest
        android:id="@+id/sparkLike"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </com.swis.android.custom.customviews.SparkRecyclerViewLatest>

</LinearLayout>
</layout>