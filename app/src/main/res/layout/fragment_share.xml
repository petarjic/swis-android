<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="@dimen/dp_20"
            >


            <LinearLayout
                android:id="@+id/ll_profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_15"
                android:background="@color/colorPrimary"
                android:orientation="vertical">

                <com.swis.android.custom.customviews.textViews.GothamRoundedMed
                    android:id="@+id/tv_msg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_8"
                    android:gravity="center"
                    android:text="Join me on"
                    android:textColor="@color/white"
                    android:textSize="@dimen/ts_18" />

                <com.swis.android.custom.customviews.textViews.GothamRoundedMed
                    android:id="@+id/tv_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="SWIS"
                    android:textColor="@color/white"
                    android:textSize="40sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/dp_50"
                    android:layout_marginRight="@dimen/dp_50"
                    android:orientation="vertical"
                    android:paddingBottom="@dimen/dp_10">

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/dp_10"
                        app:cardCornerRadius="@dimen/dp_5">

                        <ImageView
                            android:id="@+id/profile_Pic"

                            android:layout_width="@dimen/dp_120"
                            android:layout_height="@dimen/dp_120"
                            android:scaleType="fitXY"
                            android:src="@drawable/intro1" />
                    </androidx.cardview.widget.CardView>

                    <com.swis.android.custom.customviews.textViews.GothamRoundedBook
                        android:id="@+id/tv_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/dp_20"
                        android:gravity="center"
                        android:text=""
                        android:textColor="@color/white"
                        android:textSize="@dimen/ts_18" />

                    <com.swis.android.custom.customviews.textViews.GothamRoundedBook
                        android:id="@+id/tv_username"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/dp_5"
                        android:gravity="center"
                        android:text=""
                        android:textColor="@color/white"
                        android:textSize="@dimen/ts_14" />


                    <com.swis.android.custom.customviews.edittext.EditTextGothamRoundedBook
                        android:id="@+id/tv_bio"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/dp_10"
                        android:backgroundTint="@color/white"
                        android:enabled="false"
                        android:focusable="false"
                        android:paddingLeft="@dimen/dp_5"
                        android:text=""
                        android:textColor="@color/white"
                        android:textColorHint="@color/white"
                        android:textSize="@dimen/ts_14" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/dp_30"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:background="@color/black"
                        android:paddingLeft="@dimen/dp_10"
                        android:paddingRight="@dimen/dp_10">

                        <com.swis.android.custom.customviews.textViews.GothamRoundedBook
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:padding="@dimen/dp_3"
                            android:text="Download on"
                            android:textColor="@color/white"
                            android:textSize="@dimen/ts_18" />

                        <ImageView
                            android:layout_width="@dimen/dp_25"
                            android:layout_height="@dimen/dp_25"
                            android:layout_gravity="center"
                            android:src="@drawable/apple" />

                        <View
                            android:layout_width="@dimen/dp_1"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/dp_5"
                            android:layout_marginRight="@dimen/dp_5"
                            android:background="@color/white" />


                        <ImageView
                            android:layout_width="@dimen/dp_25"
                            android:layout_height="@dimen/dp_25"
                            android:layout_gravity="center"
                            android:src="@drawable/android" />
                    </LinearLayout>


                </LinearLayout>


            </LinearLayout>
            <com.swis.android.custom.customviews.buttons.GothamRoundedBook
                android:id="@+id/btn_share"
                android:layout_width="@dimen/dp_150"
                android:layout_height="@dimen/button_height"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_20"
                android:layout_marginBottom="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_20"
                android:background="@drawable/cardviewbackground_primary_filled"
                android:text="Share Profile"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/ts_18" />
        </LinearLayout>

    </ScrollView>

</LinearLayout>
</layout>