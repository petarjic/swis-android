<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_5"
                android:padding="@dimen/dp_10"
                android:src="@drawable/back_icon" />



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dp_30"
                android:layout_marginRight="@dimen/dp_30"
                android:orientation="vertical">


                <ImageView
                    android:id="@+id/image_logo_new_account"
                    android:layout_width="@dimen/dp_244"
                    android:layout_height="@dimen/dp_47"
                    android:layout_gravity="center"
                    android:paddingTop="@dimen/dp_10"
                    android:layout_marginBottom="@dimen/dp_40"
                    app:srcCompat="@drawable/asset_18" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:orientation="vertical">

                    <com.swis.android.custom.customviews.edittext.EditTextGothamRoundedBook

                        android:id="@+id/user_name"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_60"
                        android:backgroundTint="@android:color/transparent"
                        android:drawableLeft="@drawable/usernamedrawablesize"
                        android:drawablePadding="@dimen/dp_20"
                        android:hint="Username"
                        android:inputType="text"
                        android:padding="@dimen/dp_10"
                        android:textColor="@color/white"
                        android:textColorHint="@color/white"
                        android:textSize="@dimen/ts_16" />

                    <com.swis.android.custom.customviews.textViews.GothamRoundedBook
                        android:id="@+id/user_name_error"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_m_15"
                        android:text="This username already exist.."
                        android:textColor="@color/red"
                        android:visibility="gone"
                        android:layout_marginLeft="@dimen/dp_50"
                        android:layout_marginBottom="@dimen/dp_10"
                        android:textColorHint="@color/white"
                        android:textSize="@dimen/ts_14" />
                </LinearLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:layout_marginLeft="@dimen/dp_8"
                    android:layout_marginTop="@dimen/dp_m_10"
                    android:background="@color/white" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:orientation="vertical">

                    <com.swis.android.custom.customviews.edittext.EditTextGothamRoundedBook
                        android:id="@+id/full_name"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_60"
                        android:backgroundTint="@android:color/transparent"
                        android:drawableLeft="@drawable/fullnamedrawablesize"
                        android:drawablePadding="@dimen/dp_20"
                        android:hint="Full Name"
                        android:inputType="text"
                        android:padding="@dimen/dp_10"
                        android:textColor="@color/white"
                        android:textColorHint="@color/white"
                        android:textSize="@dimen/ts_16" />
                    <com.swis.android.custom.customviews.textViews.GothamRoundedBook
                        android:id="@+id/name_error"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_m_15"
                        android:textColor="@color/red"
                        android:visibility="gone"
                        android:layout_marginLeft="@dimen/dp_50"
                        android:layout_marginBottom="@dimen/dp_10"
                        android:textColorHint="@color/white"
                        android:textSize="@dimen/ts_14" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:layout_marginLeft="@dimen/dp_8"
                    android:layout_marginTop="@dimen/dp_m_10"
                    android:background="@color/white" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:orientation="vertical">

                    <com.swis.android.custom.customviews.edittext.EditTextGothamRoundedBook
                        android:id="@+id/email"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_60"
                        android:backgroundTint="@android:color/transparent"
                        android:drawableLeft="@drawable/emaildrawablesize"
                        android:drawablePadding="@dimen/dp_20"
                        android:hint="Email"
                        android:inputType="textEmailAddress"
                        android:padding="@dimen/dp_10"
                        android:textColor="@color/white"
                        android:textColorHint="@color/white"
                        android:textSize="@dimen/ts_16" />
                    <com.swis.android.custom.customviews.textViews.GothamRoundedBook
                        android:id="@+id/email_error"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_m_15"
                        android:textColor="@color/red"
                        android:visibility="gone"
                        android:layout_marginLeft="@dimen/dp_50"
                        android:layout_marginBottom="@dimen/dp_10"
                        android:textColorHint="@color/white"
                        android:textSize="@dimen/ts_14" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="@dimen/dp_8"
                    android:layout_marginTop="-10dp"
                    android:background="@color/white" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:orientation="vertical">

                    <com.swis.android.custom.customviews.edittext.EditTextGothamRoundedBook
                        android:id="@+id/password"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_60"
                        android:backgroundTint="@android:color/transparent"
                        android:drawableLeft="@drawable/passdrawablesize"
                        android:drawablePadding="@dimen/dp_20"
                        android:hint="Password"
                        android:inputType="textPassword"
                        android:padding="@dimen/dp_10"
                        android:textColor="@color/white"
                        android:textColorHint="@color/white"
                        android:textSize="@dimen/ts_16" />
                    <com.swis.android.custom.customviews.textViews.GothamRoundedBook
                        android:id="@+id/pass_error"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_m_15"
                        android:textColor="@color/red"
                        android:visibility="gone"
                        android:layout_marginLeft="@dimen/dp_47"
                        android:layout_marginBottom="@dimen/dp_10"
                        android:textColorHint="@color/white"
                        android:textSize="@dimen/ts_14" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:layout_marginLeft="@dimen/dp_8"
                    android:layout_marginTop="@dimen/dp_m_10"
                    android:background="@color/white" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:orientation="vertical">

                    <com.swis.android.custom.customviews.edittext.EditTextGothamRoundedBook
                        android:id="@+id/conf_Pass"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_60"
                        android:backgroundTint="@android:color/transparent"
                        android:drawableLeft="@drawable/confpassdrawablesize"
                        android:drawablePadding="@dimen/dp_20"
                        android:hint="Repeat Password"
                        android:inputType="textPassword"
                        android:padding="@dimen/dp_10"
                        android:textColor="@color/white"
                        android:textColorHint="@color/white"
                        android:textSize="@dimen/ts_16" />
                    <com.swis.android.custom.customviews.textViews.GothamRoundedBook
                        android:id="@+id/conf_pass_error"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_m_15"
                        android:textColor="@color/red"
                        android:visibility="gone"
                        android:layout_marginLeft="@dimen/dp_47"
                        android:layout_marginBottom="@dimen/dp_10"
                        android:textColorHint="@color/white"
                        android:textSize="@dimen/ts_14" />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_1"
                        android:layout_marginLeft="@dimen/dp_8"
                        android:layout_marginTop="@dimen/dp_m_10"
                        android:background="@color/white" />
                    <com.swis.android.custom.customviews.checkbox.CheckBoxItalic
                        android:id="@+id/cb_policy"
                        android:theme="@style/CheckboxStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_10"
                        android:text="By signing up you accept our Terms and Condition and Privacy Policy"
                        android:textColor="@color/white"
                        />

                </LinearLayout>



                <com.swis.android.custom.customviews.buttons.GothamRoundedBook
                    android:id="@+id/btn_sign_up"
                    android:layout_width="@dimen/dp_93"
                    android:layout_height="@dimen/button_height"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/dp_30"
                    android:background="@drawable/card_view_with_selector"
                    android:text="Sign up"
                    android:textColor="@color/white"
                    android:textSize="@dimen/ts_16" />

                <com.swis.android.custom.customviews.textViews.GothamRoundedBook
                    android:id="@+id/sign_in"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:gravity="center"
                    android:text="@string/already_have_an_account_sign_in"
                    android:textColor="@color/white"
                    android:textSize="@dimen/ts_14" />
            </LinearLayout>
        </LinearLayout>

    </ScrollView>

</layout>