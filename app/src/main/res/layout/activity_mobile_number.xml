<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_5"
            android:padding="@dimen/dp_20"
            android:src="@drawable/back_icon" />

        <com.swis.android.custom.customviews.textViews.GothamRoundedBook
            android:id="@+id/tv_msg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_40"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_40"
            android:gravity="center"
            android:padding="@dimen/dp_10"
            android:text="@string/please_provide"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/ts_18" />


        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:layout_marginStart="@dimen/dp_30"
            android:layout_marginTop="@dimen/dp_40"
            android:layout_marginEnd="30dp"
            android:background="@drawable/card_view_with_selector"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_30"
                android:layout_gravity="center"
                android:padding="@dimen/dp_3"
                android:src="@drawable/mobile" />

            <LinearLayout
                android:id="@+id/ll_mobile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/dp_2"
                android:paddingRight="@dimen/dp_2">

                <com.swis.android.custom.customviews.textViews.GothamRoundedBook
                    android:id="@+id/tv_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@android:color/transparent"
                    android:inputType="number"
                    android:maxLength="10"
                    android:padding="@dimen/dp_3"
                    android:text="+1"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:textSize="@dimen/ts_16" />

                <ImageView
                    android:layout_width="@dimen/dp_23"
                    android:layout_height="@dimen/dp_23"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/dp_1"
                    android:src="@drawable/ic_dropdown" />
            </LinearLayout>

            <com.swis.android.custom.customviews.edittext.EditTextGothamRoundedBook
                android:id="@+id/et_mobile"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:backgroundTint="@android:color/transparent"
                android:gravity="center_vertical"
                android:imeOptions="actionDone"
                android:inputType="number"
                android:padding="@dimen/dp_3"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textCursorDrawable="@null"
                android:textSize="@dimen/ts_16" />

            <ImageView
                android:id="@+id/delete_number"
                android:layout_width="@dimen/dp_25"
                android:layout_height="@dimen/dp_20"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/dp_5"
                android:src="@drawable/asset_5" />

        </LinearLayout>

        <com.swis.android.custom.customviews.textViews.GothamRoundedBook
            android:id="@+id/email_error"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_50"
            android:layout_marginBottom="@dimen/dp_10"
            android:textColor="@color/red"
            android:textColorHint="@color/white"
            android:textSize="@dimen/ts_14"
            android:visibility="gone" />


    </LinearLayout>

</layout>