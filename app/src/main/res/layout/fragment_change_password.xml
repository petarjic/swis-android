<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/intro1"
        tools:context=".activity.SignUpActivity">


        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_5"
            android:padding="@dimen/dp_10"
            android:src="@drawable/back_icon" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_100"
            android:layout_height="wrap_content">
            <com.swis.android.custom.customviews.textViews.GothamRoundedBook
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/ts_20"
                android:padding="@dimen/dp_10"
                android:text="Change Password"
                android:gravity="center"
                android:textAllCaps="true"
                android:textColor="@color/white"/>
        </LinearLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/dp_30"
                android:paddingRight="@dimen/dp_30"
                android:orientation="vertical">






                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:orientation="vertical">

                    <com.swis.android.custom.customviews.edittext.EditTextGothamRoundedBook
                        android:id="@+id/new_password"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_60"
                        android:backgroundTint="@android:color/transparent"
                        android:drawableLeft="@drawable/passdrawablesize"
                        android:drawablePadding="@dimen/dp_20"
                        android:hint="Enter new Password"
                        android:inputType="textPassword"
                        android:textColor="@color/white"
                        android:padding="@dimen/dp_10"
                        android:textColorHint="@color/gray"
                        android:textSize="@dimen/ts_16" />
                    <com.swis.android.custom.customviews.textViews.GothamRoundedBook
                        android:id="@+id/new_pass_error"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_m_15"
                        android:textColor="@color/red"
                        android:visibility="gone"
                        android:layout_marginLeft="@dimen/dp_50"
                        android:layout_marginBottom="@dimen/dp_10"
                        android:textColorHint="@color/white"
                        android:textSize="@dimen/ts_14" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:layout_marginTop="@dimen/dp_m_10"
                    android:layout_marginLeft="@dimen/dp_8"
                    android:background="@color/white"/><LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:orientation="vertical">

                    <com.swis.android.custom.customviews.edittext.EditTextGothamRoundedBook
                        android:id="@+id/conf_password"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_60"
                        android:backgroundTint="@android:color/transparent"
                        android:drawableLeft="@drawable/passdrawablesize"
                        android:drawablePadding="@dimen/dp_20"
                        android:hint="Enter Confirm Password"
                        android:inputType="textPassword"
                        android:textColor="@color/white"
                        android:padding="@dimen/dp_10"
                        android:textColorHint="@color/gray"
                        android:textSize="@dimen/ts_16" />
                    <com.swis.android.custom.customviews.textViews.GothamRoundedBook
                        android:id="@+id/pass_error"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_m_15"
                        android:textColor="@color/red"
                        android:visibility="gone"
                        android:layout_marginLeft="@dimen/dp_50"
                        android:layout_marginBottom="@dimen/dp_10"
                        android:textColorHint="@color/white"
                        android:textSize="@dimen/ts_14" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:layout_marginTop="@dimen/dp_m_10"
                    android:layout_marginLeft="@dimen/dp_8"
                    android:background="@color/white"/>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_20"
                    android:gravity="center">
                    <com.swis.android.custom.customviews.buttons.GothamRoundedMed
                        android:id="@+id/btn_submit"
                        android:layout_width="@dimen/dp_100"
                        android:layout_height="@dimen/button_height"
                        android:text="@string/submit"
                        android:textAllCaps="false"
                        android:textSize="@dimen/ts_15"
                        android:background="@drawable/cardviewbackground_primary_filled"
                        android:textColor="@color/white"/>
                </LinearLayout>

            </LinearLayout>
        </ScrollView>


    </LinearLayout>
</layout>